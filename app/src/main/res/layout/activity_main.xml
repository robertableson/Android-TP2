<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rob.tp2androidrobertableson.MainActivity">

    <Button
        android:text="Click War"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnClickWar"
        android:textAllCaps="false"
        android:onClick="openClickWar" />

    <Button
        android:text="La Petite Devinette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnClickWar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:id="@+id/btnDevinette"
        android:textAllCaps="false"
        android:onClick="openLaPetiteDevinette" />

    <Button
        android:text="Game Over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGameOver"
        android:textAllCaps="false"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnClickWar"
        android:layout_alignEnd="@+id/btnClickWar"
        android:onClick="gameOver" />

    <Button
        android:text="L'univers Me RÃ©pondra!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOndesUnivers"
        android:textAllCaps="false"
        android:layout_above="@+id/btnGameOver"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="94dp"
        android:onClick="openLuniversMeRepondra" />
</RelativeLayout>
